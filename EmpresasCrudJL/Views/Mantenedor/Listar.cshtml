@model List<JugadorModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista Jugadores
    </div>

    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        <hr />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre Completo</th>
                    <th>Numero</th>
                    <th>Equipo</th>
                    <th>Alias</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.Numero</td>
                        <td>@item.Equipo</td>
                        <td>@item.Alias</td>
                        <td>@item.Estado</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Mantenedor" asp-route-ID="@item.ID" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" asp-route-ID="@item.ID" class="btn btn-danger btn-sm"><i class="bi bi-person-dash"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
